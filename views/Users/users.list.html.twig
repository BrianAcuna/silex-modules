{% extends 'layout.html.twig' %}

{% block title 'Usuarios' %}

{% block body %}

<div class="container">
	<div class="row">

    <div class="col-md-12">
      <legend>Lista de Facultades</legend>

      <div class="table-responsive">

        <table id="mytable" class="table table-bordred table-striped">

          <thead>
            <th>ID</th>
            <th>Nombre</th>
            <th>Decano</th>
            <th>Email</th>
            <th>Sitio Web</th>

            <th>Editar</th>
            <th>Borrar</th>
          </thead>

          <tbody>

            {% for index, u in use %}
            <tr>
              <td>{{ u.id }}</td>
              <td>{{ u.nombre }}</td>
              <td>{{ u.decano }}</td>
              <td>{{ u.email }}</td>
              <td>{{ u.sitio }}</td>
              <td>
                <p data-placement="top" data-toggle="tooltip" title="Editar">
                  <a href="{{ url('users-edit', { index: index }) }}">
                    <button class="btn btn-primary btn-xs" data-title="Editar" >
                      <i class="glyphicon glyphicon-pencil"></i>
                    </button>
                  </a>
                </p>
              </td>
              <td>
                <p data-placement="top" data-toggle="tooltip" title="Borrar">
                  <a href="{{ url('users-delete', { index: index }) }}">
                    <button class="btn btn-danger btn-xs" data-title="Borrar">
                      <i class="glyphicon glyphicon-trash"></i>
                    </button>
                  </a>
                </p>
              </td>
            </tr>
            {% endfor %}

          </tbody>

        </table>

      </div>
    </div>
  </div>
</div>

{% endblock %}